</section>


<script>
	{% comment %} $(document).ready(function(){
		function checkRequired(){
			var empty = 0;
			$('form#contact_form input.required:not(#file-upload-btn)').each(function(e) {
				if ($(this).val() == '') {
					empty += 1;
					console.log('empty is', empty, $(this))
				}
			});
			let fileUpload = $("#file-upload-btn")[0].files.length 
			if(!fileUpload || fileUpload == 0){
				empty += 1
				console.log('no file uploaded yet ')
			}
			if (empty >= 1) {
				$('#register').attr('disabled', 'disabled'); 
			} else {
				$('#register').removeAttr('disabled'); 
			}
		}

		$('form#contact_form input[type=text], form#contact_form input[type=password], form#contact_form input[type=email]').keyup(function() {
			checkRequired()
		});
		$("#file-upload-btn").change(function(){
			checkRequired()
		})
		$("#employees").change(function(){
			checkRequired()
		})
		$('#how').change(function() {
			checkRequired()
			var val = $(this).val();
			
			if (val == "Other")
				$('#how-other').removeClass('hidden');
			else
				$('#how-other').addClass('hidden');
		});
	}) {% endcomment %}
</script>
