{% style %}
    #designer-sign-up .section {
        margin-bottom: 42px;
    }
    #designer-sign-up .section--page {
        margin-top: 30px;
    }
    #designer-sign-up .section__title {
        padding: 30px 0;
        margin: 0 0 30px;
        position: relative;
        background: #f0f0f0;
    }
    #designer-sign-up .section__title .section__title-text {
        font-family: minion-pro-display,serif;
        font-weight: 400;
        font-style: italic;
        letter-spacing: 0;
        color: #f92a2c;
        text-transform: none;
        margin: 0;
        padding: 0;
    }
    #designer-sign-up .section__title--center {
        margin-left: auto;
        margin-right: auto;
        text-align: center;
    }
    #designer-sign-up .container {
        padding: 0 30px;
        width: 100%;
        margin: 0 auto;
    }
    #designer-sign-up .container--medium {
        max-width: 1200px;
    }
    #designer-sign-up .o-layout {
        display: block;
        padding: 0;
        list-style: none;
        margin: 0 0 0 -30px;
        font-size: 0;
    }
    #designer-sign-up .o_layout__item {
        box-sizing: border-box;
        display: inline-block;
        vertical-align: top;
        padding-left: 30px;
        font-size: 1rem;
    }
    #designer-sign-up .rte {
        margin-bottom: calc(var(--gutter) / 2);
        font-size: calc(1rem * var(--adjust-body));
    }
    #designer-sign-up p {
        margin: 0;
        padding: 0;
    }
{% endstyle %}
<section class="section section--page page">
	<div class="section__title section__title--center">
		<h1 class="section__title-text h2">{{ page.title }}</h1>
	</div>
	<div class="container container--medium">
	
