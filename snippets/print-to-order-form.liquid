{% form 'contact' %}
    {% if form.posted_successfully? %}
      <div id="reserve-form-success" class="search-draw js-search-draw mfp-hide">
        <div class="search-draw__wrapper">
          <div class="search__head">
            <div class="search__label">
              <h3 class="search__label-title">Thank you for placing a reserve</h3>
            </div>
          </div>
          <div class="search__inner">
            <p>
              <small>You will be contacted by a sales person within 1 business day. Please reach out with any questions at
                <a href="mailto:customerservice@sisterparishdesign.com">customerservice@sisterparishdesign.com</a>
                or call us M-F 9am-5pm EST at 800.970.3366.</small>
            </p>
          </div>
        </div>
      </div>
      <script>
        $(document).ready(function() {
          $.magnificPopup.open({
            items: {
              src: "#reserve-form-success"
            },
            type: "inline",
            mainClass: "mfp-medium",
            fixedContentPos: true,
            focus: ".js-search-input",
            closeMarkup: '<button title="Close (Esc)" type="button" class="mfp-close mfp-close--custom js-close-mfp"><i class="icon icon--close"></i></button>',
            removalDelay: 200
          });
        });
      </script>
    {% endif %}
